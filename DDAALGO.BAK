int round(float a)
{
	return (int)(a+0.5);
}
int dda(float xa,float ya,float xb,float yb,int arr[],int n)
{
// for horizontal and vertical difference.
    float dx = xb - xa;   // dx =  xb - xa;
    float dy = yb - ya;   // dy =  yb - ya;
    cout<<"\n dx = "<<dx<<"\n dy = "<<dy<<endl;
// for steps counting.
    int steps; //for steps counting

    if(abs(dx)>abs(dy))
	steps = dx;
    else
	steps = dy;

//  finding increament.

    float xinc = dx/steps;
    float yinc = dy/steps;

//  temporary variables to handle the values.
    float tempx = xa;
    float tempy = ya;
// printing Answer
    cout<<"\n\nANSWER \n\n";
    int count=0;
    for(int i = 0;i<steps;i++)
    {
	if(arr[count]==1)
		putpixel(round(tempx),getmaxy()-round(tempy),3);
	count++;
	//cout<<" "<<count;
	//cout<<sizeof(arr);
	if(count==n)
		count=0;
	tempx = tempx + xinc;
	tempy = tempy + yinc;
    }

return 0;
}
